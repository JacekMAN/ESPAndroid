<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#000000">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="#2d2c2c"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/frameLayout"
        android:layout_alignStart="@+id/frameLayout">



        <TextView
            android:text="Ustawienie alarmÃ³w"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:id="@+id/textView1"
            android:textColor="#fbfdfb"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart"
            android:layout_width="200dp" />



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="2dp"
            app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/powr"
            android:background="@android:drawable/ic_menu_revert" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:text="Temperatura na piecu"
        android:textColor="#fddd08" />

    <CheckBox
        android:text="maksymalna temperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/common_google_signin_btn_text_dark_disabled"
        android:id="@+id/piec1"
        android:lineSpacingExtra="10sp"
        app:buttonTint="@color/common_google_signin_btn_text_dark_default"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="86dp"
        android:background="#2d2c2c"
        android:ems="2"
        android:inputType="number"
        android:text=""
        android:textColor="#FFFFFF" />

    <TextView
        android:text="`C"
        android:layout_height="19dp"
        android:layout_marginTop="85dp"
        android:id="@+id/textView2"
        android:textColor="#fbfdfb"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/editText1"
        android:layout_width="30dp" />

    <CheckBox
        android:text="minimalna temperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/common_google_signin_btn_text_dark_disabled"
        android:id="@+id/piec2"
        android:lineSpacingExtra="10sp"
        app:buttonTint="@color/common_google_signin_btn_text_dark_default"/>

    <EditText
        android:layout_height="20dp"
        android:inputType="number"
        android:text=""
        android:ems="2"
        android:textColor="#FFFFFF"
        android:background="#2d2c2c"
        android:layout_marginStart="220dp"
        android:layout_marginTop="126dp"
        android:id="@+id/editText2"
        android:layout_width="40dp" />

    <TextView
        android:text="`C"
        android:layout_height="19dp"
        android:layout_marginTop="125dp"
        android:id="@+id/textView3"
        android:textColor="#fbfdfb"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/editText1"
        android:layout_width="30dp" />












</RelativeLayout>
